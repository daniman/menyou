<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ScrollableStuff$DummySectionFragment" >

    <TextView
        android:id="@+id/section_label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="which do you dislike?"
        android:textSize="18dp" />
    
    <ListView
        android:id="@+id/dislikes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/dislikes_input"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/listView4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <ListView
        android:id="@+id/listView4"
        android:layout_width="180dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dislikes_input"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" >
    </ListView>
    
    
    <AutoCompleteTextView
    android:id="@+id/dislikes_input"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView4"
    android:layout_marginRight="70dp"
     />
 

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/dislikes_input"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView4"
        android:text="add" />

</RelativeLayout>
