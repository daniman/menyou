<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SearchRadius" >
    
    <TextView
        android:id="@+id/radius_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="SEARCH RADIUS"
        android:background="#638e22"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/radiusWords"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:text="how far do you want us \nto look around you?"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />
           
    <Button
        android:id="@+id/radius1"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radiusWords"
        android:text="100m"
        android:textColor="#638e22"
        android:textSize="20sp" />
           
    <Button
        android:id="@+id/radius2"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radius1"
        android:text="200m \n(recommended)"
        android:textColor="#638e22"
        android:textSize="20sp" />
           
    <Button
        android:id="@+id/radius3"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radius2"
        android:text="400m"
        android:textColor="#638e22"
        android:textSize="20sp" />
           
    <Button
        android:id="@+id/radius4"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radius3"
        android:text="800m"
        android:textColor="#638e22"
        android:textSize="20sp" />

</RelativeLayout>
