<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Profile" >
    <!--
    <ImageView
        android:id="@+id/profile_av"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/hamburger" />
    -->
    <TextView
           android:id="@+id/username_first"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:text="@string/profile_username_first"
           android:textSize="28sp"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="2dp" />
    <TextView
           android:id="@+id/username_last"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/username_first"
           android:layout_toRightOf="@+id/profile_av"
           android:text="@string/profile_username_last"
           android:textSize="28sp"
           android:layout_marginLeft="30dp" />
    <ImageButton
        android:id="@+id/friends_button"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/friends" />

    <ImageButton
        android:id="@+id/mood_button"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_above="@+id/dietary_button"
        android:layout_marginBottom="16dp"
        android:layout_alignLeft="@+id/dietary_button"
        android:layout_centerHorizontal="true"
        android:src="@drawable/my_mood" />

    <ImageButton
        android:id="@+id/taste_button"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_above="@+id/mood_button"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/mood_button"
        android:src="@drawable/taste_profile" />

    <ImageButton
        android:id="@+id/history_button"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/my_history" />

    <ImageButton
        android:id="@+id/dietary_button"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_above="@+id/friends_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/dietary_choices" />
 
    <Button
        android:id="@+id/reset_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/username_first"
        android:text="Reset Profile"
        android:textSize="10dp" /> 
        
    <Button
        android:id="@+id/feedback"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reset_button"
        android:text="Send Feedback"
        android:textSize="10dp" /> 

</RelativeLayout>
