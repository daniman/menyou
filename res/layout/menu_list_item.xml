<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dishPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/dishName"
        android:textColor="#787878"
        android:textSize="12sp"
        android:textStyle="italic" />
    
    <TextView android:id="@+id/dishName"
        	  android:textSize="16sp"
        	  android:textColor="#638e22"
              android:layout_width="wrap_content"
   			  android:layout_height="wrap_content"
   			  android:text="name"/>
 
    <TextView android:id="@+id/dishDescription"
        	  android:textStyle="italic"
        	  android:textSize="14sp"
        	  android:textColor="#b8b8b8"
              android:layout_width="wrap_content"
   			  android:layout_height="wrap_content"   			  
   			  android:layout_below="@id/dishName" />
    
    <TextView
        android:id="@+id/dishRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rank"
        android:layout_below="@+id/dishDescription"
        android:textColor="#787878"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>
