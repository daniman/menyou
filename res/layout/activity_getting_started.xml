<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GettingStarted" >

	<EditText android:id="@+id/editFood"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/gs_textView1"
            android:layout_marginBottom="10dip"/>
    <TextView
        android:id="@+id/gs_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gs_logo"
        android:layout_marginTop="22dp"
        android:text="@string/getting_started_intro"
        android:textSize="15sp"  />


    <Button
        android:id="@+id/gs_button2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editFood"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/gs_button2"
        android:textColor="#638e22"
        android:textSize="30sp" />

    <Button
        android:id="@+id/gs_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gs_button2"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/gs_button1"
        android:textColor="#638e22"
        android:textSize="30sp" />
    
    <Button
        android:id="@+id/gs_button3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gs_button"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/gs_button3"
        android:textColor="#638e22"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/gs_logo"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gs_textView1"
        android:layout_marginRight="32dp"
        android:src="@drawable/logosimple" />

    <ImageButton
        android:id="@+id/gs_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gs_logo"
        android:layout_alignLeft="@+id/gs_textView1"
        android:background="@null"
        android:src="@drawable/ic_back_icon" />

</RelativeLayout>