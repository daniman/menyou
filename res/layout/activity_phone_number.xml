<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".PhoneNumber" >

        <TextView
        android:id="@+id/username_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="PHONE NUMBER"
        android:background="#638e22"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textColor="#fff" />
    
    <TextView
        android:id="@+id/username_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="We couldn't find a mobile phone number in your device \n\nCould you help us by entering your 10 digit number below?"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_number"
        android:layout_alignLeft="@+id/edit_number"
        android:text="number:"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <Button
        android:id="@+id/number_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/Text2"
        android:layout_marginBottom="60dp"
        android:text="Done" />

    <EditText
        android:id="@+id/edit_number"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Text3"
        android:layout_marginBottom="2dp"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ems="10" />
    
    <TextView
        android:id="@+id/Text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/number_button"
        android:layout_marginBottom="10dp"
        android:text="This number is only used to match you up with your friends reviews and food ratings"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/random_button"
        android:layout_marginBottom="5dp"
        android:text="If this device isn't a cellphone then\n let us generate a random number for you"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <Button
        android:id="@+id/random_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Random" />

</RelativeLayout>
